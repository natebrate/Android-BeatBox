<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Enable Night Mode">

        <CheckBoxPreference
            android:title="Night Mode"
            android:key="NIGHT"
            android:defaultValue="false"
            android:summaryOn="Night mode enable"
            android:summaryOff="Night is disabled"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Screen orientation">
        <ListPreference
            android:title="Screen Orientation"
            android:key="ORIENTATION"
            android:entries="@array/item_name"
            android:entryValues="@array/Item_value"
            android:defaultValue="false"
          />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Theme Selector">
        <ListPreference
            android:title="Themes"
            android:key="THEME"
            android:entries="@array/theme_name"
            android:entryValues="@array/theme_value"
            android:summary="@string/pref_night_summary"
            android:dialogTitle="@string/list2_dialog_title"/>
            />
    </PreferenceCategory>

</PreferenceScreen>